<%- include('common/header'); -%>
<h1>Login</h1>
<form method="POST" action="/login" style="max-width: 400px; margin: 0 auto;">
    <div style="margin-bottom: 10px;">
        <label for="username" style="display: block;">Username:</label>
        <input type="text" id="username" name="username" style="width: 100%; padding: 5px;">
    </div>
    <div style="margin-bottom: 10px;">
        <label for="password" style="display: block;">Password:</label>
        <input type="password" id="password" name="password" style="width: 100%; padding: 5px;">
    </div>
    <div style="text-align: center;">
        <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: #fff; border: none; cursor: pointer;">Login</button>
    </div>
</form>

<%- include('common/footer'); -%>